<h1><%= @author.first_name %></h1>

<% unless @author_books.length <= 0 %>
    <h2>We have <%= @author_books.length.to_s + " " + "book".pluralize(@author_books.length) %> written by this person containing epigraphs.</h2>
<% end %>

<ul>
    <% @author_books.each do |book| %>
        <li>
            <%= link_to book.title, book %> (<%= book.year %>)
        </li>
    <% end %>
</ul>

<% unless @quoted_quotes.length <= 0 %>
    <h2>This author was quoted <%= @quoted_quotes.length.to_s + " " + "time".pluralize(@quoted_quotes.length) %> in epigraphs.</h2>
    <ul>
        <% @quoted_quotes.each do |quote| %>
            <li>
                <%= link_to quote.body, quote %>
            </li>
        <% end %>
    </ul>
<% end %>
