<%= form_with model: quote do |form| %>
  <div>
    <%= form.label :body %><br>
    <%= form.text_area :body %>
    <% quote.errors.full_messages_for(:body).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <h4>Book that is opened by epigraph</h4>

  <div>
    <%= form.select :book_id, options_from_collection_for_select(Book.all, 'id', 'title') %>
  </div>

  <h4>Author of this epigraph</h4>

  <div>
    <%= form.select :author_id, options_from_collection_for_select(Author.all, 'id', 'first_name') %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>